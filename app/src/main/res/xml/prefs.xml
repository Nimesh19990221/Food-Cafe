<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Enable Night Mode">

        <CheckBoxPreference
            android:title="Night Mode"
            android:key="night"
            android:summaryOff="Night Mode is Deactivated"
            android:summaryOn="Night Mode is activatted"
            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Screen Oriantation">
        <ListPreference
            android:title="Oriantation"
            android:key="ORIENTATION"
            android:entries="@array/itemname"
            android:entryValues="@array/itemvalue"
            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Notifications">
        <ListPreference
            android:title="Get push Notifications"
            android:key="GetpushNotifications"

            android:defaultValue="false"/>
        <ListPreference
            android:title="Subscribe for Newsletters"
            android:key="Newsletters"

            android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Others">
        <ListPreference
            android:title="About App"
            android:key="About App"

            android:defaultValue="false"/>
    </PreferenceCategory>


</PreferenceScreen>